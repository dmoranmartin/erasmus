<%= render_breadcrumbs %>
<h1> <%= @word.name %></h1>
<h2> definitions</h2>

<ul>
<% @definitions.each do |definition| %>

<li><%= definition.text %></li>
<%= link_to('edit definition', edit_word_definition_path(id:definition.id)) %>
<%= link_to('delete definition', word_definition_path(id:definition.id), :method => :delete) %>

<% end %>
</ul>