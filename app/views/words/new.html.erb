<%= form_for [@word] do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :origin %>
	<%= f.text_field :origin %>
	<br>
	<%= f.label :definition %>
	<%= f.text_field :definition %>
	<br>
	<%= f.label :photo %>
	<%= f.text_field :photo %>
	<br>
	<%= f.label :video %>
	<%= f.text_field :video %>
	<br>

	<%= f.submit 'Save' %>
<% end %>